<Page x:Class="SalesServices.Views.AdminWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesServices.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminWindow">
    <Grid>
        <TabControl Background="Transparent"
                    BorderThickness="0">
            <TabItem Header="Товары">
                <ListView Background="Transparent"
                          ItemsSource="{Binding Products}"
                          HorizontalContentAlignment="Stretch">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="Bisque" CornerRadius="10"
                                                Margin="5"
                                                HorizontalAlignment="Stretch">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Grid.Column="0" Source="{Binding CorrectPicturePath}"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding FullName}"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               TextWrapping="WrapWithOverflow"/>
                                                </StackPanel>
                                                <TextBlock HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="2"
                                                           Text="{Binding Cost, ConverterCulture=ru-RU, StringFormat={}{0:c}}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </TabItem>
            <TabItem Header="Категории товаров">

            </TabItem>
            <TabItem Header="Услуги">

            </TabItem>
            <TabItem Header="Пользователи">

            </TabItem>
            <TabItem Header="Товары пользователей">

            </TabItem>
            <TabItem Header="Услуги пользователей">

            </TabItem>
        </TabControl>
    </Grid>
</Page>
