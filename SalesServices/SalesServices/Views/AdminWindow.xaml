<Page x:Class="SalesServices.Views.AdminWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesServices.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminWindow">
    <Grid>
        <TabControl Background="Transparent"
                    BorderThickness="0">
            <TabItem Header="Товары">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Margin="20,10"
                                 Text="{Binding ProductSearch}"/>
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <ComboBox Margin="20,10"
                                      Width="150"
                                      SelectedItem="{Binding SelectedProductFilther}"/>
                            <ComboBox Margin="20,10"
                                      Width="150"
                                      SelectedItem="{Binding SelectedProductSort}"/>
                        </StackPanel>
                    </Grid>
                    <ListView Background="Transparent"
                          ItemsSource="{Binding Products}"
                          HorizontalContentAlignment="Stretch"
                          BorderThickness="0"
                          Grid.Row="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="Orange" 
                                                CornerRadius="10"
                                                Margin="5"
                                                x:Name="Border">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Grid.Column="0" 
                                                       Source="{Binding CorrectPicturePath}"
                                                       Margin="5,0,0,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding FullName}"/>
                                                        <TextBlock Text="{Binding Description}"
                                                               TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <TextBlock HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"
                                                           Grid.Column="2"
                                                           Margin="0,0,5,0"
                                                           Text="{Binding Cost, ConverterCulture=ru-RU, StringFormat={}{0:c}}"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="OrangeRed"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Категории товаров">

            </TabItem>
            <TabItem Header="Услуги">

            </TabItem>
            <TabItem Header="Пользователи">

            </TabItem>
            <TabItem Header="Товары пользователей">

            </TabItem>
            <TabItem Header="Услуги пользователей">

            </TabItem>
        </TabControl>
    </Grid>
</Page>
